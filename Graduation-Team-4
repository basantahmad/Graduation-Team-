    <script>
        // Fetch Gemini API data
        const apiUrl = 'https://api.gemini.com/v1/pubticker/BTCUSD';

        async function fetchGeminiData() {
            try {
                const response = await fetch(apiUrl);
                const data = await response.json();
                document.getElementById('api-content').innerHTML = `
                    <p><strong>Last Price:</strong> ${data.last}</p>
                    <p><strong>Bid Price:</strong> ${data.bid}</p>
                    <p><strong>Ask Price:</strong> ${data.ask}</p>
                `;
            } catch (error) {
                console.error('Error fetching Gemini API data:', error);
                document.getElementById('api-content').textContent = 'Failed to fetch Gemini API data.';
            }
        }

        // Call API on load
        fetchGeminiData();
    </script>
